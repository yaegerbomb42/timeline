rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Per-user data silo.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // All subcollections under a user doc inherit the same rule.
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}


